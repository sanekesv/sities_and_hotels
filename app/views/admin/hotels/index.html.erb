<h1>Listing hotels</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>City</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.rating %></td>
        <td><%= @city.name %></td>
        <td><%= link_to 'Rooms', admin_hotel_rooms_path(hotel) %></td>
        <td><%= link_to 'Edit hotel', edit_admin_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy hotel', admin_hotel_path(hotel), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create new hotel', new_admin_city_hotel_path(@city) %>
